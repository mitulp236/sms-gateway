{
  "template": "<!DOCTYPE html><html lang=\"en\"><head><meta charset=\"UTF-8\"><meta http-equiv=\"X-UA-Compatible\" content=\"IE=edge\"><meta name=\"viewport\" content=\"width=device-width, initial-scale=1.0\"><title>SMS Gateway Notification</title><style>@keyframes slideInDown{from{opacity:0;transform:translateY(-20px)}to{opacity:1;transform:translateY(0)}}@keyframes fadeInUp{from{opacity:0;transform:translateY(20px)}to{opacity:1;transform:translateY(0)}}@keyframes pulse{0%,100%{opacity:1}50%{opacity:0.7}}@keyframes shimmer{0%{background-position:-1000px 0}100%{background-position:1000px 0}}@keyframes float{0%,100%{transform:translateY(0px)}50%{transform:translateY(-8px)}}*{margin:0;padding:0;box-sizing:border-box}body{font-family:-apple-system,BlinkMacSystemFont,'Segoe UI','Roboto','Oxygen','Ubuntu','Cantarell',sans-serif;background:linear-gradient(135deg,#f5f7fa 0%,#f0f4ff 100%);line-height:1.6;padding:20px}.container{max-width:600px;margin:0 auto;background:white;border-radius:12px;overflow:hidden;box-shadow:0 8px 24px rgba(102,126,234,0.15)}.header{background:linear-gradient(135deg,#00D4FF 0%,#0099CC 100%);padding:28px 32px;text-align:center;color:white;position:relative}.header-icon{font-size:32px;margin-bottom:10px;display:block;line-height:1}.header h1{font-size:28px;font-weight:700;margin-bottom:6px;letter-spacing:-0.5px}.header p{font-size:14px;opacity:0.95;font-weight:400;letter-spacing:0.5px}.content{padding:40px}.section-title{font-size:20px;font-weight:700;color:#1a1a1a;margin-bottom:28px;display:flex;align-items:center;gap:10px}.section-icon{font-size:24px;display:block;line-height:1}.details{margin-bottom:28px;background:linear-gradient(135deg,#e8f4ff 0%,#dceeff 100%);border-radius:8px;padding:0;border:2px solid #66c2e0;overflow:hidden}.detail-row{display:flex;align-items:center;padding:16px 20px;gap:12px;border-bottom:2px solid #66c2e0}.detail-row:last-child{border-bottom:none}.detail-icon{font-size:20px;min-width:24px;text-align:center;display:block;line-height:1}.detail-content{flex:1}.detail-label{font-weight:600;color:#0099CC;font-size:11px;text-transform:uppercase;letter-spacing:0.6px;display:block;margin-bottom:6px}.detail-value{color:#000;font-size:14px;font-weight:600}.message-section{margin-top:28px}.message-label{font-size:12px;font-weight:700;color:#0099CC;text-transform:uppercase;letter-spacing:0.6px;margin-bottom:12px;display:flex;align-items:center;gap:8px}.message-label-icon{font-size:16px;display:block;line-height:1}.message-box{background:linear-gradient(135deg,#e8f4ff 0%,#dceeff 100%);border-left:4px solid #00D4FF;padding:20px;border-radius:6px;border:1px solid #66c2e0}.message-box p{color:#000;font-size:15px;line-height:1.6;font-weight:400}.footer{background:linear-gradient(135deg,#e8f4ff 0%,#dceeff 100%);padding:28px;text-align:center;border-top:1px solid #66c2e0}.footer-icon{font-size:32px;margin-bottom:12px;display:block;line-height:1}.footer p{color:#666;font-size:13px;margin:8px 0;font-weight:400}.footer-title{color:#0099CC;font-weight:600;font-size:14px;margin-bottom:4px}.status-badge{display:inline-block;background:linear-gradient(135deg,#00D4FF 0%,#0099CC 100%);color:white;padding:6px 12px;border-radius:20px;font-size:11px;font-weight:600;text-transform:uppercase;letter-spacing:0.5px;margin-top:4px}</style></head><body><div class=\"container\"><div class=\"header\"><span class=\"header-icon\">&#128172;</span><h1>SMS Gateway</h1><p>Message Notification</p></div><div class=\"content\"><h2 class=\"section-title\"><span class=\"section-icon\">&#128236;</span>New Message</h2><div class=\"details\"><div class=\"detail-row\"><span class=\"detail-icon\">&#128241;</span><div class=\"detail-content\"><span class=\"detail-label\">From</span><span class=\"detail-value\">{{sender}}</span></div></div><div class=\"detail-row\"><span class=\"detail-icon\">&#128337;</span><div class=\"detail-content\"><span class=\"detail-label\">Date & Time</span><span class=\"detail-value\">{{time}}</span></div></div></div><div class=\"message-section\"><div class=\"message-label\"><span class=\"message-label-icon\">&#128231;</span>Message Content</div><div class=\"message-box\"><p>{{body}}</p></div><span class=\"status-badge\">&#10003; Delivered</span></div></div><div class=\"footer\"><span class=\"footer-icon\">&#10728;</span><p class=\"footer-title\">SMS Gateway</p><p>Automatic Message Forwarding Service</p><p style=\"color:#999;margin-top:16px;font-size:12px;\">This is an automated message. Please do not reply directly to this email.</p></div></div></body></html>"
}